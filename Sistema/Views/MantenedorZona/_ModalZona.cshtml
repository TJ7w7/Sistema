<div class="modal fade" id="modalZona" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalZonaLabel">Agregar Zona</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="formZona">
                    <input type="hidden" id="zonaId" />
                    <div class="mb-3">
                        <label for="nombreZona" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombreZona" required>
                    </div>
                    <div class="mb-3">
                        <label for="estadoZona" class="form-label">Estado</label>
                        <select class="form-select" id="estadoZona">
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>
