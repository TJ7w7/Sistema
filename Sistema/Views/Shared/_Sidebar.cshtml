@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!-- LOGO -->
<div id="logoContainer" class="logo-container">
    <img src="~/images/logo-poroto.png" alt="Logo Casa Blanca" class="logo-casablancha">
</div>

<!-- Barra de Navegación Superior -->
<nav class="navbar-superior">
    <ul class="nav-superior">
        <li>
            <a asp-controller="MantenedorUsuario" asp-action="ListarUsuarios"
               class="@(currentController == "MantenedorUsuario" ? "active" : "")">USUARIOS</a>
        </li>
        <li>
            <a asp-controller="MantenedorProducto" asp-action="ListarProductos"
               class="@(currentController == "MantenedorProducto" ? "active" : "")">CARTA</a>
        </li>
        <li>
            <a asp-controller="MantenedorCategoria" asp-action="ListarCategorias"
               class="@(currentController == "MantenedorCategoria" ? "active" : "")">CATEGORIAS</a>
        </li>
        <li>
            <a asp-controller="MantenedorInsumo" asp-action="ListarInsumos"
               class="@(currentController == "MantenedorInsumo" ? "active" : "")">INSUMOS</a>
        </li>
        <li>
            <a asp-controller="MantenedorMesa" asp-action="ListarMesas"
               class="@(currentController == "MantenedorMesa" ? "active" : "")">MESAS</a>
        </li>
    </ul>

    <!-- Botón de Salir -->
    <div class="logout-container">
        <form asp-controller="Home" asp-action="Logout" method="post" class="logout-form">
            <button type="submit" class="btn-logout">Salir</button>
        </form>
    </div>
</nav>

<link rel="stylesheet" href="~/css/siderbar.css" />

<script>
    let scrolled = false;

    window.addEventListener('scroll', function () {
        const logo = document.getElementById('logoContainer');
        const navbar = document.querySelector('.navbar-superior');

        if (window.scrollY > 50 && !scrolled) {
            logo.classList.add('logo-hidden');
            scrolled = true;

            // Desplazar suavemente hacia la barra
            navbar.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        } else if (window.scrollY <= 50) {
            logo.classList.remove('logo-hidden');
            scrolled = false;
        }
    });
</script>





