<div class="bg-white shadow-sm" style="width: 280px; min-height: 100vh; border-right: 1px solid #e0e0e0;">
    <!-- Header del Usuario -->
    <div class="p-4 border-bottom">
        <div class="d-flex align-items-center">
            <div class="position-relative">
                <img src="https://via.placeholder.com/50" class="rounded-circle" alt="Usuario" style="width: 50px; height: 50px; object-fit: cover;">
                <span class="position-absolute bottom-0 end-0 bg-success rounded-circle" style="width: 12px; height: 12px; border: 2px solid white;"></span>
            </div>
            <div class="ms-3 flex-grow-1">
                <h6 class="mb-0 fw-semibold">@User.Identity?.Name ?? "Invitado"</h6>
                <small class="text-muted">Administrador</small>
            </div>
        </div>
    </div>

    <!-- Menú de Navegación -->
    <nav class="py-3">
        <ul class="nav flex-column px-2">
            <li class="nav-item mb-1">
                <a asp-controller="Home" asp-action="Index" class="nav-link d-flex align-items-center rounded px-3 py-2 text-dark">
                    @* <i class="bi bi-speedometer2 me-3 fs-5"></i> *@
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item mb-1">
                <a asp-controller="MantenedorUsuario" asp-action="ListarUsuarios" class="nav-link d-flex align-items-center rounded px-3 py-2 text-dark">
                    @* <i class="bi bi-people me-3 fs-5"></i> *@
                    <span>Usuarios</span>
                </a>
            </li>
            <li class="nav-item mb-1">
                <a asp-controller="MantenedorProducto" asp-action="ListarProductos" class="nav-link d-flex align-items-center rounded px-3 py-2 text-dark">
                    @* <i class="bi bi-box-seam me-3 fs-5"></i> *@
                    <span>Productos</span>
                </a>
            </li>
            <li class="nav-item mb-1">
                <a asp-controller="MantenedorCategoria" asp-action="ListarCategorias" class="nav-link d-flex align-items-center rounded px-3 py-2 text-dark">
                    @* <i class="bi bi-shield-check me-3 fs-5"></i> *@
                    <span>Categoria</span>
                </a>
            </li>
            <li class="nav-item mb-1">
                <a asp-controller="MantenedorInsumo" asp-action="ListarInsumos" class="nav-link d-flex align-items-center rounded px-3 py-2 text-dark">
                    @* <i class="bi bi-shield-check me-3 fs-5"></i> *@
                    <span>Insumos</span>
                </a>
            </li>
            <li class="nav-item mb-1">
                <a asp-controller="MantenedorZona" asp-action="ListarZonasMesas" class="nav-link d-flex align-items-center rounded px-3 py-2 text-dark">
                    @* <i class="bi bi-shield-check me-3 fs-5"></i> *@
                    <span>Mesas</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Footer del Sidebar -->
    @* <div class="position-absolute bottom-0 w-100 p-3 border-top">
        <form asp-controller="Home" asp-action="Index" method="post">
            <button type="submit" class="btn btn-outline-danger w-100 d-flex align-items-center justify-content-center">
                <i class="bi bi-box-arrow-right me-2"></i>
                Cerrar Sesión
            </button>
        </form>
    </div> *@
</div>

