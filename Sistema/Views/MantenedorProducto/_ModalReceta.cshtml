<!-- Modal Receta -->
<div class="modal fade" id="modalReceta" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Receta: <span id="nombreProductoReceta"></span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="productoIdReceta" />

                <!-- Lista de ingredientes actuales -->
                <h6 class="mb-3">Ingredientes de la Receta</h6>
                <div id="listaIngredientes" class="mb-4">
                    <!-- Se cargará dinámicamente -->
                </div>

                <!-- Agregar nuevo ingrediente -->
                <div class="card">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">Agregar Ingrediente</h6>
                    </div>
                    <div class="card-body">
                        <form id="formAgregarIngrediente">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="insumoIdReceta" class="form-label">Insumo *</label>
                                    <select class="form-select" id="insumoIdReceta" required>
                                        <option value="">Seleccione un insumo...</option>
                                    </select>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="cantidadReceta" class="form-label">Cantidad *</label>
                                    <div class="input-group">
                                        <input type="number" step="0.01" class="form-control"
                                               id="cantidadReceta" required min="0.01">
                                        <span class="input-group-text" id="unidadMedidaReceta">-</span>
                                    </div>
                                </div>
                                <div class="col-md-2 mb-3 d-flex align-items-end">
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="bi bi-plus"></i> Agregar
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Botón guardar receta completa -->
                <div class="mt-3 text-end">
                    <button type="button" class="btn btn-primary" id="btnGuardarReceta">
                        <i class="bi bi-save"></i> Guardar Receta
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>